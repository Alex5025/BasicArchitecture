# === 前端 Vue 3 多階段建置 ===

# --- 階段 1：Node 建置 ---
FROM node:20-alpine AS builder
WORKDIR /app
COPY basic-web/package.json basic-web/package-lock.json* ./
RUN npm install
COPY basic-web/ .
RUN npm run build

# --- 階段 2：Nginx 執行 ---
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
COPY docker/nginx.conf /etc/nginx/conf.d/default.conf
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
